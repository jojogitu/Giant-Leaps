{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<div class="{{post_class}} post-header" style="background-image: url({{image}})">
  <div class="col-md-8 col-md-offset-2">
    <div class="post-header-content">

      <h1 class="title post-title has-sub"><a href="{{url}}">{{title}}</a></h1>

      <div class="meta">
        <time class="post-date" datetime="{{date format="MMMM DD, YYYY"}}">{{date format="MMMM Do, YYYY"}}</time> &bull;
        <span class="tags">{{tags prefix="" separator=" "}}</span>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>

<div class="content" role="main">
  <div class="col-md-8 col-md-offset-2">
    <div class="{{post_class}}">

      <div class="post-content">
        {{content}}
      </div>
      {{!-- Email subscribe form at the bottom of the page --}}
      <hr />
      {{!-- Links to Previous/Next posts --}}
      <div class="read-next">
        <div class="prev-post pull-left">
          {{#prev_post}}
          <a class="read-prev-story btn btn-inverse" href="{{url}}"><span class="icon-arrow-left2"></span> Previous Post</a>
          {{/prev_post}}
        </div>
        <div class="next-post pull-right">
          {{#next_post}}
          <a class="read-next-story btn btn-inverse" href="{{url}}">Next Post <span class="icon-arrow-right2"></span></a>
          {{/next_post}}
        </div>
        <div class="clearfix"></div>
      </div>


      <div class="post-footer">
      {{!-- Everything inside the #author tags pulls data from the author --}}
        <div class="post-author tile">
          {{#author}}
          {{#if image}}
          <figure class="author-image col-sm-3 col-xs-6">
            <a class="img" href="{{url}}"><img class="img-responsive img-circle" src="{{image}}" /></a>
          </figure>
          {{/if}}

          <section class="author col-sm-9 col-xs-6 text-left">
              <h4><a href="{{url}}">{{name}}</a></h4>

              {{#if bio}}
                  <p>{{bio}}</p>
              {{else}}
                  <p>Read <a href="{{url}}">more posts</a> by this author.</p>
              {{/if}}
              <div class="author-meta">
                  {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
                  {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
              </div>
          </section>
          {{/author}}
          <div class="clearfix"></div>
        </div>

        <div class="post-comment" id="disqus_thread"></div>
        <script>

        /**
